# i3 config file (v4)
# https://i3wm.org/docs/userguide.html 


font pango:Ubuntu Mono 12
#font pango:Symbol Neu Powerline 11


# setting hjkl
set $left  h
set $down  j
set $up    k
set $right l


# change focus hjkl
bindsym Mod1+$left  focus left
bindsym Mod1+$down  focus down
bindsym Mod1+$up    focus up
bindsym Mod1+$right focus right

# change focus arrow keys
bindsym Mod1+Left  focus left
bindsym Mod1+Down  focus down
bindsym Mod1+Up    focus up
bindsym Mod1+Right focus right


# move focused window hjkl
bindsym Mod1+Shift+$left  move left
bindsym Mod1+Shift+$down  move down
bindsym Mod1+Shift+$up    move up
bindsym Mod1+Shift+$right move right

# move focused window arrow keys
bindsym Mod1+Shift+Left  move left
bindsym Mod1+Shift+Down  move down
bindsym Mod1+Shift+Up    move up
bindsym Mod1+Shift+Right move right


# kill focused window
bindsym Mod1+Shift+q kill


# change containter layout
bindsym Mod1+s layout stacking
bindsym Mod1+w layout tabbed
bindsym Mod1+e layout toggle split

# split mode change horizontal|split|toggle
bindsym Mod1+t     split toggle

# fullscreen mode
bindsym Mod1+f     fullscreen toggle

# toggle tiling / floating
bindsym Mod1+space floating toggle


# change focus between tiling / floating windows
bindsym Mod1+Tab focus mode_toggle


# focus the parent|child container  LOOK FOR TOGGLE
bindsym Mod1+p focus parent
#bindsym Mod1+r focus child


# icons
# 
# - text editing
#    
# - home
#   
# - files
#   


# workspaces
#
# editing
set $ws1 "1:"
# files
set $ws2 "2:"
# browser
set $ws3 "3:"
# messaging #
set $ws4 "4:"
# image editing
set $ws5 "5:"
set $ws6 "6:"
set $ws7 "7:🗖"
set $ws8 "8:🗖"
set $ws9 "9:🗖"
# music
set $ws10 "10:🎜"


# switch to workspace
bindsym Mod1+1 workspace $ws1
bindsym Mod1+2 workspace $ws2
bindsym Mod1+3 workspace $ws3
bindsym Mod1+4 workspace $ws4
bindsym Mod1+5 workspace $ws5
bindsym Mod1+6 workspace $ws6
bindsym Mod1+7 workspace $ws7
bindsym Mod1+8 workspace $ws8
bindsym Mod1+9 workspace $ws9
bindsym Mod1+0 workspace $ws10
# show scratchpad
bindsym Mod1+minus scratchpad show

# move focused container to workspace
bindsym Mod1+Shift+1 move container to workspace $ws1
bindsym Mod1+Shift+2 move container to workspace $ws2
bindsym Mod1+Shift+3 move container to workspace $ws3
bindsym Mod1+Shift+4 move container to workspace $ws4
bindsym Mod1+Shift+5 move container to workspace $ws5
bindsym Mod1+Shift+6 move container to workspace $ws6
bindsym Mod1+Shift+7 move container to workspace $ws7
bindsym Mod1+Shift+8 move container to workspace $ws8
bindsym Mod1+Shift+9 move container to workspace $ws9
bindsym Mod1+Shift+0 move container to workspace $ws10
# move to scratchpad
bindsym Mod1+Shift+minus move scratchpad


# Programs stuff
# xprop ...

# Cmus
for_window [title="^cmus v2.7.1"] move workspace $ws10

# GIMP Stuff
for_window [title="GIMP Startup"] move workspace $ws5
for_window [class="Gimp"] move workspace $ws5
#for_window [window_role="gimp-dock"] floating disable, resize shrink width 30 px or 30 ppt
for_window [window_role="gimp-toolbox-color-dialog"] floating enable
#for_window [window_role="gimp-toolbox"] floating disable, resize grow width 50 px or 5 0ppt


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        
	# Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Mod1+$left  resize shrink width 2 px or 2 ppt
        bindsym Mod1+$down  resize grow height 2 px or 2 ppt
        bindsym Mod1+$up    resize shrink height 2 px or 2 ppt
        bindsym Mod1+$right resize grow width 2 px or 2 ppt

        # same bindings, but for the arrow keys
        bindsym Mod1+Left   resize shrink width 2 px or 2 ppt
        bindsym Mod1+Down   resize grow height 2 px or 2 ppt
        bindsym Mod1+Up     resize shrink height 2 px or 2 ppt
		bindsym Mod1+Right  resize grow width 2 px or 2 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod1+r mode "default"
}

bindsym Mod1+r mode "resize"


mode "open" {
	bindsym v exec --no-startup-id urxvt -e vim, mode "default"
	bindsym d exec --no-startup-id qutebrowser https://discordapp.com/channels/@me, mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod1+o mode "default"
}

bindsym Mod1+o mode "open"



# PUT TOGGLE


set $bg-color 	         #42273a
set $inactive-bg-color   #823f58
set $text-color          #91a9e2
set $inactive-text-color #D2C0A7
set $urgent-bg-color     #cb5f8a
set $urgent-text-color   #42273a

#hide_edge_borders horizontal


# window colors
# commands              border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $urgent-text-color   $bg-color

#hide_edge_borders both

# bar
bar {
	#status_command py3status -c ~/.13/i3status.conf
	status_command i3blocks -c ~/.i3/i3blocks.conf
	#status_command i3status
        #font pango:Font Awesome 5 Free 12
	separator_symbol " "
	position top
        tray_output primary
	colors {
		background $bg-color
	    	separator #757575
		#                  border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
		}
}


# reload|restart the configuration file
bindsym Mod1+Shift+c reload
bindsym Mod1+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym Mod1+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to logout?' -b 'Yes, logout' 'i3-msg exit'"

# lockscreen
bindsym	Mod1+Shift+x exec --no-startup-id i3lock --color "$bg-color"

# gaps
gaps inner 8
gaps outer 4
for_window [class="^.*"] border pixel 0


# program start keybindings

# start dmenu
bindsym Mod1+d exec --no-startup-id i3-dmenu-desktop
#bindsym Mod1+d exec rofi -show run -lines 3 -eh 2 -width 100 -padding 300 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" #-font "System San Francisco Display 18"
#bindsym Mod1+d exec dmenu_run  # not so cool

# start a terminal
bindsym Mod1+Return exec --no-startup-id urxvt

# start vim
bindsym Mod1+v exec urxvt -e vim

# start ranger
bindsym Mod1+n exec urxvt -e ranger

# start ranger
bindsym Mod1+m exec urxvt -e cmus

# start browser
bindsym Mod1+b exec --no-startup-id qutebrowser

# start discord in browser
bindsym Mod1+> exec --no-startup-id qutebrowser https://discordapp.com/channels/@me

# printscreen
bindsym --release Print       exec --no-startup-id scrot -e 'mv $f ~/Pictures'
bindsym --release Shift+Print exec --no-startup-id scrot -s
bindsym --release Ctri+Print  exec --no-startup-id scrot -u


# volume and brightness control buttons on
# (packages needed xbacklight alsa-utils pulseaudio)

# Pulse Audio controls

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay  exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext  exec playerctl next
bindsym XF86AudioPrev  exec playerctl previous


#exec workon py35; python3 -e ~/nasa-background-downloader.py
exec --no-startup-id exec today todaysNasaPicAsBg
exec --no-startup-id exec feh --bg-fill ~/.i3/bg
exec --no-startup-id dropbox start
