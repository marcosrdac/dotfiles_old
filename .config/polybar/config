; polybar config file


; --- general settings --- ;

[colors]
foreground     = ${xrdb:color7  : #ffffff}
foreground-alt = ${xrdb:color15 : #aaaaaa}
background     = ${xrdb:color0  : #000000}
background-alt = ${xrdb:color8  : #555555}
primary        = ${xrdb:color2  : #00ff00}
secondary      = ${xrdb:color1  : #ff0000}
alert          = ${xrdb:color3  : #ffff00}


[bar/my_bar]
; geometry
dpi = ${xrdb:dpi : 100}
width  = 100%
height = 22
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
fixed-center = true
; style
background = ${colors.background}
foreground = ${colors.foreground}
font-0     = ${xrdb:font:monospace}
font-1     = ${xrdb:symbol_font:monospace}
; modules position
modules-left   = bspwm xkeyboard
modules-center = mpd
modules-right  = wlan eth pulseaudio brightness battery pomodoro date time
; tray position
tray-position = right
tray-padding  =  2
tray-background =
; window manager
wm-restack = bspwm
; cursors
cursor-click = default
cursor-scroll = default


; --- modules --- ;
;
[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
label-focused = %index%
label-occupied = %index%
label-urgent = %index%
label-empty =
inline-mode = true
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
; label
label-focused-padding  = 2
label-occupied-padding = 2
label-urgent-padding   = 2
; modes
label-monocle   = " %{T1}%{T-} "
label-floating  = " %{T1}%{T-} "
label-locked    = " %{T1}%{T-} "
label-sticky    = " %{T1}%{T-} "
label-private   = " %{T1}%{T-} "
label-marked    = " %{T1}%{T-} "
; states formating
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-urgent-background  = ${colors.alert}
label-urgent-foreground  = ${colors.background}
; modes formating
label-floating-background = ${colors.primary}
label-floating-foreground = ${colors.background-alt}
label-monocle-background  = ${colors.secondary}
label-monocle-foreground  = ${colors.background}
; I see a separator in here :)
label-locked-background  = ${colors.background-alt}
label-locked-foreground  = ${colors.foreground-alt}
label-sticky-background  = ${colors.background-alt}
label-sticky-foreground  = ${colors.foreground-alt}
label-private-background = ${colors.background-alt}
label-private-foreground = ${colors.foreground-alt}
label-marked-background  = ${colors.background-alt}
label-marked-foreground  = ${colors.foreground-alt}


[module/xkeyboard]
type = internal/xkeyboard
format = <label-indicator>
format-prefix =
label-layout =
; general settings
label-indicator-padding = 1
label-indicator-margin  = 1
; specific settings
label-indicator-on-capslock-padding   = 1
label-indicator-on-capslock-margin    = 1
label-indicator-off-numlock-padding   = 1
label-indicator-off-numlock-margin    = 1
label-indicator-on-scrolllock-padding = 1
label-indicator-on-scrolllock-margin  = 1
; just showing on caps lock, off num lock and on scroll lock
label-indicator-on-capslock    = " Caps Lock "
label-indicator-off-capslock   =
label-indicator-on-numlock     =
label-indicator-off-numlock    = " Num Lock "
label-indicator-on-scrolllock  = " Scroll Lock "
label-indicator-off-scrolllock =
; general formating
label-indicator-background = ${colors.alert}
label-indicator-foreground = ${colors.background}
; specific formating
label-indicator-on-capslock-background   = ${colors.alert}
label-indicator-on-capslock-foreground   = ${colors.background}
label-indicator-off-numlock-background   = ${colors.secondary}
label-indicator-off-numlock-foreground   = ${colors.background}
label-indicator-on-scrolllock-background = ${colors.alert}
label-indicator-on-scrolllock-foreground = ${colors.background}


[module/mpd]
type = internal/mpd
enable-scroll = true
label-song-maxlen = 70
label-song-ellipsis = true
;label-song = " %{T1}%{T-} %title% - %artist% "
label-song = " %{T1}%{T-} %title% "
format-online  = %{A1:mpc toggle &:}%{A6:mpc_show:}%{A2:mpc stop &:}%{A3:mpc stop &:}%{A4:mpc prev &:}%{A5:mpc next &:} <label-song> %{A}%{A}%{A}%{A}%{A}%{A}
format-stopped =


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0

label-disconnected-foreground = ${colors.alert}
label-connected = "%{A1:networkmanager_dmenu &:}%essid%%{A}"
label-disconnected = "%{A1:networkmanager_dmenu &:}%{T1} %{T-}%{A}"

ramp-signal-0 = %{T1}%{T-}
;ramp-signal-foreground = ${colors.foreground-alt}
format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
click-left = networkmanager_dmenu &
click-right = networkmanager_dmenu &


[module/eth]
type = internal/network
interval = 5.0
interface = enp2s0f1
format-connected-prefix = "%{T1}%{T-} "
format-disconnected =


[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
;format-prefix-foreground = ${colors.foreground-alt}
label-muted-foreground = ${colors.alert}
ramp-volume-0 = %{T1}%{T-}
ramp-volume-1 = %{T1}%{T-}
ramp-volume-2 = %{T1}%{T-}
ramp-volume-3 = %{T1}%{T-}
ramp-volume-4 = %{T1}%{T-}
ramp-volume-5 = %{T1}%{T-}
ramp-volume-6 = %{T1}%{T-}
ramp-volume-7 = %{T1}%{T-}
ramp-volume-7-foreground = ${colors.alert}
label-volume = %percentage%
label-muted = %{T1}%{T-} %percentage%


[module/brightness]
type = custom/script
exec = /home/marcosrdac/.local/bin/polybar/polybar_brightness
tail = true
format-prefix = "%{T1}%{T-} "
label = %output%
format =  <label>
scroll-up = "brightnessctl s +5%; kill -USR1 %pid%"
scroll-down = "brightnessctl s 5%-; kill -USR1 %pid%"
click-left = "brightnessctl s 1%; kill -USR1 %pid%"
click-middle = "brightnessctl s 30%; kill -USR1 %pid%"
click-right = "brightnessctl s 100%; kill -USR1 %pid%"


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98
format-full        =
format-discharging = <ramp-capacity> <label-discharging>
format-charging    = <animation-charging> <label-charging>
; ramp icons
ramp-capacity-0 = "%{T1}%{T-}"
ramp-capacity-1 = "%{T1}%{T-}"
ramp-capacity-2 = "%{T1}%{T-}"
ramp-capacity-3 = "%{T1}%{T-}"
ramp-capacity-4 = "%{T1}%{T-}"
; ramp formating
ramp-capacity-1-foreground = ${colors.alert}
ramp-capacity-0-foreground = ${colors.secondary}
; animation
animation-charging-framerate = 750
animation-charging-0 = "%{T1}%{T-}"
animation-charging-1 = "%{T1}%{T-}"
animation-charging-2 = "%{T1}%{T-}"
animation-charging-3 = "%{T1}%{T-}"
animation-charging-4 = "%{T1}%{T-}"


[module/pomodoro]
type = custom/script


[module/date]
type = custom/script
interval = 1
exec = ~/.local/bin/polybar/polybar_date_calendar
format-prefix = "%{T1}%{T-} "
click-left = ~/.local/bin/polybar/polybar_date_calendar --popup &


[module/time]
type = internal/date
interval = 1
time = "%H%M%S"
;format-prefix-foreground = "${colors.foreground-alt}"
format-prefix = "%{T1}%{T-} "
label = "%time%"
click-right = "st -e vim &"


; --- other settings --- ;

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

