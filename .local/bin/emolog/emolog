#!/usr/bin/env sh

IFS=$'\n'

sensitivity_axis="\
-3 terror
-2 fear
-1 apprehension
 0 neutral
 1 annoyance
 2 anger
 3 rage"

attention_axis="\
-3 amazement
-2 surprise
-1 distraction
 0 neutral
 1 interest
 2 anticipation
 3 vigilance"

pleasantness_axis="\
-3 grief
-2 sadness
-1 pensiveness
 0 neutral
 1 serenity
 2 joy
 3 extasy"

aptitude_axis="\
-3 loathing
-2 disgust
-1 boredom
 0 neutral
 1 acceptance
 2 trust
 3 admiration"


time=$(date +'%Y%m%d%H%M%S') &&
sensitivity=$(dm_choose sensitivity $sensitivity_axis | awk '{print $1}') &&
attention=$(dm_choose attention $attention_axis | awk '{print $1}') &&
pleasantness=$(dm_choose pleasantness $pleasantness_axis | awk '{print $1}') &&
aptitude=$(dm_choose aptitude $aptitude_axis | awk '{print $1}') &&
{
  stimulus=$(dm_choose stimulus)
  sh emologger $time $sensitivity $attention $pleasantness $aptitude $stimulus
}
