#!/bin/bash


awaken_hidden ()
{
 for i in "$@"
 do
 bspwm_toggle_hidden $i
 bspwm_toggle_hidden $i
 done
}


#if [ \( -L "$1" \) ]
#then
#    file=$(readlink $1)
#else
#    file=$1
#fi
file="$(realpath "$1")"


awaken_hidden dropdown_terminal dropdown_mail dropdown_calculator dropdown_music_player
wpg -a "$file" -A "$file" -s "$file" -n
dunst_start
qutebrowser_reload.py
#wal_steam -w
xwallpaper --zoom "$file"
echo $file > $XDG_CONFIG_HOME/wal.conf
notify-send "New theme set!"
