#!/bin/sh

# Import the colors
. "${HOME}/.cache/wal/colors.sh"
# Import the fonts
symbol_font_name="$(xrdb -query | awk '$1~/^*symbol_font_name:$/ {$1=""; print $0}')"

fg=$foreground
bg=$background

