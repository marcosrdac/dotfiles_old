#    echo "<span background=\""$bg"\" foreground=\""$fg"\">$sp<span font=\""$symbol_font_name"\">$label</span> $artist - $song$sp</span>"
#    echo "<span background=\""$bg"\" foreground=\""$fg"\">$sp<span font=\""$symbol_font_name"\">$label</span> $song$sp</span>"
#fi

