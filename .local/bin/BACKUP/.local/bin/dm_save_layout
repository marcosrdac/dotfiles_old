#!/bin/bash

foreground="$(xrdb -query | grep ^'*foreground' | awk '{$1=""; print $NF}')"
background="$(xrdb -query | grep ^'*background' | awk '{$1=""; print $NF}')"
font_name="$(xrdb -query | grep ^'*font_name' | awk '{$1=""; print $0}')"
font_size="$(xrdb -query | grep ^'*font_size' | awk '{$1=""; print $0}')"


choices="$(ls ~/.config/i3/trees/)"
chosen=$(echo -e "$choices" | dmenu -fn "$font_name-$font_size" -nb "$background" -nf "$foreground" -sb "$foreground" -sf "$background" -l 20 -i -p "system menu:")

#case "$chosen" in
#  lock)       i3lock --color "$background" ;;
#esac
