#!/usr/bin/env sh

pgrep -x dmenu && exit

drives="$(lsblk -nrpo "name,size,rm,fstype,mountpoint" | awk '$3=="1" && $4!="" && $5=="" {printf "%s (%s)\n", $1,$2}')"
[ -z "$drives" ] && exit 1

chosen="$(echo "$drives" | menu -p "mount drive:" | awk '{print $1}')"
[ -z "$chosen" ] && exit 1

udevil mount "$chosen" && pgrep -x dunst && notify-send "$chosen mounted."
