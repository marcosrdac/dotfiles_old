#!/bin/sh

pidfile=/tmp/$(basename $0).pid
echo $$ > $pidfile

echo_brightness ()
{
    brightness=$(brightnessctl -m | awk -F ',' '{print $4}')
    echo "${brightness%\%*}"
}

echo_brightness

trap "rm -f $pidfile" EXIT KILL
trap "echo_brightness" USR1


while true
do
    exec tail -f /dev/null & wait $!
done
